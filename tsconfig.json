{
  "include": [
    "src",
    "types"
  ],
  "exclude": [
    "test"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es5",
      "es2018.intl"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "ts-luxon": ["./dist"],
      "ts-luxon/*": ["./dist/*"]
    },
    "esModuleInterop": true,
    "outDir": "dist/lib"
  }
}
