{
    "include": [
        "src"
    ],
    "exclude": [
        "test"
    ],
    "compilerOptions": {
        "module": "es6",
        "target": "es6",
        "lib": [
            "es5"
        ],
        "importHelpers": true,
        "declaration": true,
        "sourceMap": true,
        "rootDir": "./src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "ts-luxon": [
                "./dist"
            ],
            "ts-luxon/*": [
                "./dist/*"
            ]
        },
        "esModuleInterop": true,
        "outDir": "dist"
    }
}
